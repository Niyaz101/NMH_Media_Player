<Window x:Class="NMH_Media_Player.ColorPicker.ThemeColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:NMH_Media_Player.ColorPicker"
        Title="Theme Color" Height="450" Width="350"
        WindowStartupLocation="CenterOwner"
        Background="#2d2d2d">

    <StackPanel Margin="15">
        <TextBlock Text="Theme Color Customization" 
                   FontWeight="Bold" FontSize="16" 
                   Foreground="White" Margin="0,0,0,10"/>

        <!-- Color Preview -->
        <Border x:Name="PreviewBox" Height="50" CornerRadius="5" Margin="0,0,0,10"/>

        <!-- ✅ Xceed Color Picker -->
        <TextBlock Text="Pick Color:" Foreground="White" Margin="0,5,0,3"/>
        <xctk:ColorPicker x:Name="ColorPickerControl" 
                          Width="200" 
                          SelectedColorChanged="ColorPickerControl_SelectedColorChanged"
                          UsingAlphaChannel="False"
                          ShowDropDownButton="True"/>

        <!-- RGB Controls -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
            <TextBlock Text="R:" Width="20" Foreground="White"/>
            <Slider x:Name="SliderR" Minimum="0" Maximum="255" Width="180" Margin="5,0,5,0" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="TxtR" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="G:" Width="20" Foreground="White"/>
            <Slider x:Name="SliderG" Minimum="0" Maximum="255" Width="180" Margin="5,0,5,0" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="TxtG" Width="40"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="B:" Width="20" Foreground="White"/>
            <Slider x:Name="SliderB" Minimum="0" Maximum="255" Width="180" Margin="5,0,5,0" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="TxtB" Width="40"/>
        </StackPanel>

        <!-- Brightness / Mixer slider -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
            <TextBlock Text="Brightness:" Width="70" Foreground="White"/>
            <Slider x:Name="SliderBrightness" Minimum="0" Maximum="1" Value="1" Width="200" ValueChanged="SliderBrightness_ValueChanged"/>
        </StackPanel>

        <!-- Hex -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0 10">
            <TextBlock Text="Hex:" Width="40" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtHex" Width="100" Text="#FFFFFF" TextChanged="TxtHex_TextChanged"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Apply" Width="100" Margin="5" Click="BtnApply_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
