<Window x:Class="NMH_Media_Player.SelectVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recent Videos"
        Width="450" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e"
        Foreground="White"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ListBox for files -->
        <ListBox x:Name="VideoListBox"
                 Background="#2d2d30"
                 BorderBrush="#444"
                 FontSize="14"
                 SelectionMode="Single"
                 Margin="0,0,0,10"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 MouseDoubleClick="VideoListBox_MouseDoubleClick"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Play" Width="90" Height="30" Margin="0,0,10,0" Click="PlayButton_Click"
                    Background="#007ACC" Foreground="White" BorderBrush="#005A9E"/>
            <Button Content="Cancel" Width="90" Height="30" Click="CancelButton_Click"
                    Background="#444" Foreground="White" BorderBrush="#222"/>
        </StackPanel>
    </Grid>
</Window>
