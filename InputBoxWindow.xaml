<Window x:Class="NMH_Media_Player.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Prompt}" Grid.Row="0" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <TextBox x:Name="txtInput" Grid.Row="1" VerticalAlignment="Stretch"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="BtnOK_Click"/>
            <Button Content="Cancel" Width="75" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
