<Window x:Class="NMH_Media_Player.SubtitlesViews.SubtitleSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Subtitles" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBox x:Name="txtSearch" Width="400" Height="25"
         Text="Enter movie or video name" Foreground="Gray"
         GotFocus="TxtSearch_GotFocus" LostFocus="TxtSearch_LostFocus"/>

            <Button Content="Search" Width="80" Margin="5,0,0,0" Click="BtnSearch_Click"/>
        </StackPanel>

        <!-- Results -->
        <ListBox x:Name="lstResults" Grid.Row="1" DisplayMemberPath="Name"/>

        <!-- Download Button -->
        <!-- Download Button -->
        <Button x:Name="BtnDownload"
        Grid.Row="2"
        Content="Download Selected"
        Height="30"
        HorizontalAlignment="Right"
        Width="150"
        Click="BtnDownload_Click"/>

    </Grid>
</Window>
