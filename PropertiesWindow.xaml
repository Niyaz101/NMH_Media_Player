<Window x:Class="NMH_Media_Player.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        Title="Properties"
        ResizeMode="NoResize"
        Background="#FFF2F2F2">

    <Grid x:Name="MainGrid" Margin="10">
        <TabControl x:Name="PropertiesTab" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1">
            <!-- Tabs will be added dynamically from C# -->
        </TabControl>
    </Grid>
</Window>
