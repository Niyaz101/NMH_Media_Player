<Window x:Class="NMH_Media_Player.Modules.Playlists.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Playlist Manager"
        Height="500" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="#1B1B1B"
        Foreground="White">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3399FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                <Setter Property="Foreground" Value="#CCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="🎵 Playlist Manager"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   Foreground="#00BCD4"/>

        <!-- DataGrid and Buttons inside a Grid -->
        <Border Grid.Row="1" Background="#2E2E35" CornerRadius="10" Padding="10" BorderBrush="#444" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- PlaylistSelector ComboBox -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- Playlist Selector -->
                <ComboBox x:Name="PlaylistSelector"
                          Grid.Row="0"
                          Height="30"
                          Margin="0,0,0,10"
                          SelectionChanged="PlaylistSelector_SelectionChanged"
                          Background="#3B3B46"
                          Foreground="DarkGray"
                          HorizontalAlignment="Stretch"
                          FontWeight="Bold"
                          BorderBrush="#555"/>

                <!-- Playlist DataGrid -->
                <DataGrid                 
                        x:Name="PlaylistGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          Background="#3B3B46"
                          Foreground="DarkOrange"
                          BorderBrush="#555"
                          AlternatingRowBackground="#44444D"
                          RowHeight="32"
                          GridLinesVisibility="Horizontal"
                          MouseDoubleClick="PlaylistGrid_MouseDoubleClick">


                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="DarkOrange"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#007ACC"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                        <DataGridTextColumn Header="Path" Binding="{Binding FilePath}" Width="3*"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="1*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Buttons at bottom -->
                <WrapPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" Orientation="Horizontal" ItemHeight="30" ItemWidth="80">
                    <Button x:Name="BtnNew" Content="New Playlist" Height="30" Margin="5,0,5,0" Click="BtnNew_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="BtnLoad" Content="Load Playlist" Height="30" Margin="5,0,5,0" Click="BtnLoad_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="BtnSave" Content="Save Playlist" Height="30" Margin="5,0,5,0" Click="BtnSave_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="BtnAdd" Content="Add Track" Height="30" Margin="5,0,5,0" Click="BtnAdd_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="BtnRemove" Content="Remove" Height="30" Margin="5,0,5,0" Click="BtnRemove_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="BtnPlay" Content="Play Playlist" Height="30" Margin="5,0,5,0" Click="BtnPlay_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="BtnClose" Content="Close" Height="30" Margin="5,0,5,0" Click="BtnClose_Click" Style="{StaticResource ModernButton}"/>
                </WrapPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
