<UserControl x:Class="NMH_Media_Player.SettingsTabs.GeneralTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="500"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="#1e1e1e">

    <!-- ScrollViewer automatically handles mouse wheel now -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Startup Settings -->
            <GroupBox Header="Startup" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10" Grid.Row="0">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkStartWithWindows" Content="Start with Windows" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkResumeLastSession" Content="Resume Last Session" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkShowSplash" Content="Show Splash Screen" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Default Media Folders -->
            <GroupBox Header="Default Folders" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10" Grid.Row="1">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Video Folder:" Foreground="White" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtVideoFolder" Grid.Row="0" Grid.Column="1" Margin="5,0" HorizontalAlignment="Stretch"/>
                    <Button Content="Browse" Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Width="75" Click="BrowseVideoFolder_Click"/>

                    <Label Content="Audio Folder:" Foreground="White" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtAudioFolder" Grid.Row="1" Grid.Column="1" Margin="5,5,0,0" HorizontalAlignment="Stretch"/>
                    <Button Content="Browse" Grid.Row="1" Grid.Column="2" Margin="5,5,0,0" Width="75" Click="BrowseAudioFolder_Click"/>
                </Grid>
            </GroupBox>

            <!-- Language -->
            <GroupBox Header="Language" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10" Grid.Row="2">
                <StackPanel Margin="10">
                    <Label Content="Select Language:" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbLanguage" Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="English" Tag="en"/>
                        <ComboBoxItem Content="French" Tag="fr"/>
                        <ComboBoxItem Content="Spanish" Tag="es"/>
                        <ComboBoxItem Content="German" Tag="de"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <!-- Notifications -->
            <GroupBox Header="Notifications" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10" Grid.Row="3">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkShowNotifications" Content="Show Notifications" Foreground="White" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Notification Duration (sec):" Foreground="White" Grid.Column="0" VerticalAlignment="Center"/>
                        <Slider x:Name="sliderNotificationDuration" Minimum="1" Maximum="10" Value="5" Grid.Column="1" Margin="5,0" HorizontalAlignment="Stretch"/>
                        <TextBlock x:Name="txtNotificationDuration" Text="{Binding ElementName=sliderNotificationDuration, Path=Value, StringFormat=F0}" Foreground="White" Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Updates -->
            <GroupBox Header="Updates" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10" Grid.Row="4">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkCheckUpdates" Content="Check for updates on startup" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Miscellaneous -->
            <GroupBox Header="Miscellaneous" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10" Grid.Row="5">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkEnableLogging" Content="Enable Logging" Foreground="White" Margin="0,0,0,5"/>
                    <Button Content="Reset to Defaults" Width="150" Click="ResetDefaults_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="6">
                <Button Content="Save Settings" Width="120" Click="SaveSettings_Click"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
