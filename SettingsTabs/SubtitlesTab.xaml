<UserControl x:Class="NMH_Media_Player.SettingsTabs.SubtitlesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="500"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="#1e1e1e">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">

            <!-- Enable/Disable Subtitles -->
            <GroupBox Header="Subtitles" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkEnableSubtitles" Content="Enable Subtitles" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkShowSubtitlesOnStartup" Content="Show Subtitles on Startup" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Font Settings -->
            <GroupBox Header="Font" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Font Size:" Foreground="White"/>
                    <Slider x:Name="sliderSubtitleFontSize" Minimum="10" Maximum="40" Value="20" Width="200"/>
                    <TextBlock x:Name="txtSubtitleFontSize"
                               Text="{Binding ElementName=sliderSubtitleFontSize, Path=Value, StringFormat={}{0:F0} pt}"
                               Foreground="White" Margin="5,0,0,0"/>

                    <Label Content="Font Color:" Foreground="White" Margin="0,5,0,0"/>
                    <ComboBox x:Name="cmbSubtitleColor" Width="200">
                        <ComboBoxItem Content="White" Tag="White"/>
                        <ComboBoxItem Content="Yellow" Tag="Yellow"/>
                        <ComboBoxItem Content="Cyan" Tag="Cyan"/>
                        <ComboBoxItem Content="Green" Tag="Green"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <!-- Background Settings -->
            <GroupBox Header="Background" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Background Opacity:" Foreground="White"/>
                    <Slider x:Name="sliderSubtitleBackground" Minimum="0" Maximum="100" Value="50" Width="200"/>
                    <TextBlock x:Name="txtSubtitleBackground"
                               Text="{Binding ElementName=sliderSubtitleBackground, Path=Value, StringFormat={}{0:F0}%}"
                               Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Position -->
            <GroupBox Header="Position" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Vertical Position:" Foreground="White"/>
                    <Slider x:Name="sliderSubtitlePosition" Minimum="0" Maximum="100" Value="90" Width="200"/>
                    <TextBlock x:Name="txtSubtitlePosition"
                               Text="{Binding ElementName=sliderSubtitlePosition, Path=Value, StringFormat={}{0:F0}%}"
                               Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save Settings" Width="120" Click="SaveSettings_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
