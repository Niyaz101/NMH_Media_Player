<UserControl x:Class="NMH_Media_Player.SettingsTabs.AdvancedTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="500"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="#1e1e1e"
             PreviewMouseWheel="UserControl_PreviewMouseWheel">

    <ScrollViewer x:Name="MainScrollViewer"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">

            <!-- Caching / Performance -->
            <GroupBox Header="Performance &amp; Caching" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Buffer Size (MB):" Foreground="White"/>
                    <Slider x:Name="sliderBufferSize" Minimum="1" Maximum="100" Value="10" Width="200"/>
                    <TextBlock Text="{Binding ElementName=sliderBufferSize, Path=Value, StringFormat={}{0:F0} MB}" 
           Foreground="White" Margin="5,0,0,0"/>


                    <CheckBox x:Name="chkEnableHardwareAcceleration" Content="Enable Hardware Acceleration" Foreground="White" Margin="0,5,0,0"/>
                    <CheckBox x:Name="chkEnableMultiThreadedDecoding" Content="Enable Multi-threaded Decoding" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Logging / Debug -->
            <GroupBox Header="Logging &amp; Debug" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkEnableVerboseLogging" Content="Enable Verbose Logging" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkShowDebugOverlay" Content="Show Debug Overlay" Foreground="White" Margin="0,0,0,5"/>
                    <Button Content="Clear Log Files" Width="150" Click="ClearLogFiles_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Experimental Features -->
            <GroupBox Header="Experimental Features" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkEnableBetaFeatures" Content="Enable Beta Features" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkUseCustomRenderPipeline" Content="Use Custom Render Pipeline" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save Settings" Width="120" Click="SaveSettings_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
