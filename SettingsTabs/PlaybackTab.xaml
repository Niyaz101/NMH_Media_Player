<UserControl x:Class="NMH_Media_Player.SettingsTabs.PlaybackTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="500"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="#1e1e1e">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">

            <!-- Playback Behavior -->
            <GroupBox Header="Playback Behavior" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkAutoPlayNext" Content="Automatically Play Next File" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkResumeLastPosition" Content="Resume Last Playback Position" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Playback Speed -->
            <GroupBox Header="Playback Speed" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Default Playback Speed:" Foreground="White"/>
                    <Slider x:Name="sliderPlaybackSpeed" Minimum="0.25" Maximum="3.0" Value="1.0" TickFrequency="0.25" IsSnapToTickEnabled="True" Width="200"/>
                    <TextBlock x:Name="txtPlaybackSpeed"
                       Text="{Binding ElementName=sliderPlaybackSpeed, Path=Value, StringFormat={}{0:F2}x}"
                       Foreground="White" Margin="5,0,0,0"/>

                </StackPanel>
            </GroupBox>

            <!-- Loop / Repeat -->
            <GroupBox Header="Loop / Repeat" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="chkLoopSingle" Content="Loop Current File" Foreground="White" Margin="0,0,0,5"/>
                    <CheckBox x:Name="chkLoopPlaylist" Content="Loop Playlist" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Audio / Video Sync -->
            <GroupBox Header="Sync / Offset" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Audio Delay (ms):" Foreground="White"/>
                    <Slider x:Name="sliderAudioDelay" Minimum="-1000" Maximum="1000" Value="0" TickFrequency="50" Width="200"/>
                    <TextBlock x:Name="txtAudioDelay" Text="{Binding ElementName=sliderAudioDelay, Path=Value, StringFormat=F0}" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Buffering -->
            <GroupBox Header="Buffering" Foreground="White" FontWeight="Bold" Background="#2d2d2d" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label Content="Buffer Size (MB):" Foreground="White"/>
                    <Slider x:Name="sliderBufferSize" Minimum="1" Maximum="50" Value="10" TickFrequency="1" Width="200"/>
                    <TextBlock x:Name="txtBufferSize" Text="{Binding ElementName=sliderBufferSize, Path=Value, StringFormat=F0}" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save Settings" Width="120" Click="SaveSettings_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
